<div class="jobseeker-edit-container content-padding-top">
    <div class="shadow-box">
        <uib-tabset active="activeJustified" justified="true">
            <uib-tab id="tab1" ng-click="selectTab(0)" class="active" index="0" heading="Personal 1"></uib-tab>
            <uib-tab id="tab2" ng-click="selectTab(1)" class="" index="1" heading="Personal 2"></uib-tab>
            <uib-tab id="tab3" ng-click="selectTab(2)" class="" index="2" heading="Job Specifics"></uib-tab>
        </uib-tabset><br><br>

        <form novalidate id="jobseeker-form" name="jobSeekerFrom" enctype="multipart/form-data">

            <!----------------TAB 1----------------------->
            <div class="" id="jobseeker-edit-1">
                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_firstname">First Name</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_firstname" class="form-control" placeholder="First Name" name="j_firstname" type="text" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_lastname">Last Name</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_lastname" class="form-control"
                                   placeholder="Last Name" name="j_lastname" type="text" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_email">Email</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_email" class="form-control"
                                   placeholder="Register with your active email id"
                                   name="j_email" type="email" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_password">Password</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_password" class="form-control"
                                   placeholder="Set this password to generate login credentials"
                                   name="j_password" type="password" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_password_confirm">Confirm Password</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_password_confirm" class="form-control"
                                   placeholder="Re-enter Password"
                                   name="j_password_confirm" type="password" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_contact">Contact</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_contact" class="form-control"
                                   placeholder="Where we can contact you" name="j_contact" type="text" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_dob">DOB</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group">
                            <input name="j_dob" type="text" placeholder="Select your Date of Birth" class="form-control" uib-datepicker-popup
                                   ng-model="jobseeker.jobseeker_dob" is-open="popup2.opened"
                                   datepicker-options="dateOptions" required="true" close-text="Close" />
                      <span class="input-group-btn calender-button">
                        <button type="button" class="btn btn-default" ng-click="open2()"><i class="glyphicon glyphicon-calendar"></i></button>
                      </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_gender">Gender</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group">
                            <div class="btn-group">
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_gender" value="1" type="radio" name="j_gender">Male
                                </label>
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_gender" value="2" type="radio" name="j_gender">Female
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_interest">Interested In</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_interested_in" ng-change="interestedInSelected()" name="j_interest" class="form-control">
                                <option disabled selected value> -- Choose the field you are interested to teach in -- </option>
                                <option ng-repeat="interest in interestedin" value="{{interest.value}}">
                                    {{interest.name}}
                                </option>
                            </select>

                            <div ng-show="jobseeker.jobseeker_interested_in == '5'" class="input-group full-width padding-small-vertical">
                                <input ng-model="jobseeker.jobseeker_interested_in_name" class="form-control"
                                       placeholder="Enter the field you are intereseted in" name="j_intereseted_in_name" type="text" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_state">State</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_state" name="j_state" ng-change="getCitiesForStateId(1)" class="form-control">
                                <option disabled selected value> -- Choose your state -- </option>
                                <option ng-repeat="state in statesList" value="{{state.state_id}}">
                                    {{state.state_name}}
                                </option>
                            </select>
                            <!--<select name="j_city" class="form-control" ng-model="placement.selected" ng-options="o as o for o in placement.options"></select>-->
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_city">City</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_city" name="j_city" class="form-control">
                                <option disabled selected value> -- Choose the city you would like to work in -- </option>
                                <option ng-repeat="city in citiesList" value="{{city.city_id}}">
                                    {{city.city_name}}
                                </option>
                            </select>
                            <!--<select name="j_city" class="form-control" ng-model="placement.selected" ng-options="o as o for o in placement.options"></select>-->
                        </div>
                    </div>
                </div><br>
                <div class="next-container">
                    <button ng-click="selectTab(1)" type="button"
                            class="btn btn-width-70 btn-custom-settings">Save and Continue</button><br><br>
                </div>
            </div>

            <!----------------TAB 2----------------------->
            <div class="remove" id="jobseeker-edit-2">

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_permanent_address">Permanent Address</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <textarea ng-model="jobseeker.jobseeker_permanent_address" class="form-control"
                                   placeholder="Enter your permanent address of residence"
                                      name="j_permanent_address" type="text"></textarea>
                        </div>
                    </div>
                </div><br>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_permanent_state">State</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_permanent_state" name="j_permanent_state" ng-change="getCitiesForStateId(2)" class="form-control">
                                <option disabled selected value> -- Choose your permanent state -- </option>
                                <option ng-repeat="state in statesList" value="{{state.state_id}}">
                                    {{state.state_name}}
                                </option>
                            </select>
                            <!--<select name="j_city" class="form-control" ng-model="placement.selected" ng-options="o as o for o in placement.options"></select>-->
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_permanent_city">City</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_permanent_city" name="j_permanent_city"
                                    class="form-control">
                                <option disabled selected value> -- Choose the city you would like to work in -- </option>
                                <option ng-repeat="city in citiesListPermanent" value="{{city.city_id}}">
                                    {{city.city_name}}
                                </option>
                            </select>
                            <!--<select name="j_city" class="form-control" ng-model="placement.selected" ng-options="o as o for o in placement.options"></select>-->
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_permanent_pincode">Pincode</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_permanent_pincode" class="form-control"
                                      placeholder="Pincode"
                                      name="j_permanent_pincode" type="text"/>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_current_address">Current Address</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <textarea ng-model="jobseeker.jobseeker_current_address" class="form-control"
                                      placeholder="Enter your current address of residence"
                                      name="j_current_address" type="text"></textarea>
                        </div>
                    </div>
                </div><br>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_current_state">State</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_current_state" name="j_current_state" ng-change="getCitiesForStateId(3)" class="form-control">
                                <option disabled selected value> -- Choose your current state -- </option>
                                <option ng-repeat="state in statesList" value="{{state.state_id}}">
                                    {{state.state_name}}
                                </option>
                            </select>
                            <!--<select name="j_city" class="form-control" ng-model="placement.selected" ng-options="o as o for o in placement.options"></select>-->
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_current_city">City</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_current_city" name="j_current_city"
                                    class="form-control">
                                <option disabled selected value> -- Choose the city you would like to work in -- </option>
                                <option ng-repeat="city in citiesListCurrent" value="{{city.city_id}}">
                                    {{city.city_name}}
                                </option>
                            </select>
                            <!--<select name="j_city" class="form-control" ng-model="placement.selected" ng-options="o as o for o in placement.options"></select>-->
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_current_pincode">Pincode</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <input ng-model="jobseeker.jobseeker_current_pincode" class="form-control"
                                      placeholder="Pincode"
                                      name="j_current_pincode" type="text"/>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_marital_status">Marital Status</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group">
                            <div class="btn-group">
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_marital_status" value="1"
                                           type="radio" name="j_marital_status">Married
                                </label>
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_marital_status" value="2"
                                           type="radio" name="j_marital_status">Unmarried
                                </label>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_level">You are looking for</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group">
                            <div class="btn-group">
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_level"
                                           ng-change="levelChanged(1)" value="1"
                                           type="radio" name="j_level">School Level
                                </label>
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_level"
                                           ng-change="levelChanged(2)" value="2"
                                           type="radio" name="j_level">Coaching Level
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group choose-subject">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_subject">Choose Subject</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_subject_id" name="j_subject" class="form-control">
                                <option disabled selected value> -- Choose the subject you are interested to apply for -- </option>
                                <option ng-repeat="subject in subjectsList" value="{{subject.subject_id}}">
                                    {{subject.subject_name}}
                                </option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group choose-level">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_sublevel">Choose Level</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group full-width">
                            <!-- Single button -->
                            <select ng-model="jobseeker.jobseeker_level_class_id" name="j_sublevel" class="form-control">
                                <option disabled selected value> -- Choose the level you are interested to apply for -- </option>
                                <option ng-repeat="level in levelsList" value="{{level.value}}">
                                    {{level.name}}
                                </option>
                            </select>
                        </div>
                    </div>
                </div>

                <div ng-hide="experienceList.length > 0" class="form-group">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_is_experienced">Are you experienced</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group">
                            <div class="btn-group">
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_is_experienced"
                                           ng-change="isExperiencedChanged(1)" value="1"
                                           type="radio" name="j_is_experienced">Yes
                                </label>
                                <label class="radio-inline">
                                    <input ng-model="jobseeker.jobseeker_is_experienced"
                                           ng-change="isExperiencedChanged(2)" value="2"
                                           type="radio" name="j_is_experienced">No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group experience-details-container">
                    <div class="label-wrapper col-sm-3">
                        <label class="control-label" for="j_experience_details">Experience Details</label>
                    </div>
                    <div class="input-group-wrapper col-sm-9">
                        <div class="input-group">
                            <div ng-show="experienceList.length > 0">
                                <span>Added&nbsp; <i class="button-green fa fa-check" aria-hidden="true"></i></span>
                                <button class="btn btn-default" ng-click="isExperiencedChanged(1)">Edit</button>
                            </div>
                            <div ng-show="experienceList.length == 0">
                                <button ng-click="isExperiencedChanged(1)" class="btn btn-primary">Add Experience</button>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="next-container">
                    <button ng-click="selectTab(2)" type="button"
