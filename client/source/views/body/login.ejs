<div>
    <div id="login-container">
        <div class="body-wrapper">
            <div class="login-wrapper">
                <div class="small-title">Already a Member? Sign In</div><br>
                <form id="login-form" name="login-form">

                    <div class="form-group">
                        <div class="input-group-wrapper">
                            <div class="input-group full-width">
                                <input ng-model="login.jobseeker_email" class="form-control"
                                       placeholder="Email ID" name="j_email" type="text"/>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group-wrapper">
                            <div class="input-group full-width">
                                <input ng-model="login.jobseeker_password" class="form-control"
                                       placeholder="Password" name="j_password" type="text"/>
                            </div>
                        </div>
                    </div><br>

                    <div class="submit-container">
                        <button type="submit" class="btn btn-red btn-custom-settings">Sign In</button><br><br>
                    </div>

                    <!--<div class="text-center">
                        <a href="#">Forgot Password?</a>
                    </div><br><br>-->

                    <div class="flex-container-center">
                        <div class="text-left col-sm-7">New User? Sign Up Now</div>
                        <div class="col-sm-5">
                            <a href="/jobseeker/new" type="submit" class="btn btn-custom-settings">Sign Up</a>
                        </div>
                    </div><br>

                </form>
            </div>
        </div>
    </div>
</div>


